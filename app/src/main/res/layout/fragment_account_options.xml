<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blury_background"
        android:scaleType="centerCrop">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h3"
            android:layout_marginTop="120dp"
            android:drawableStart="@drawable/ic_kleine_shape"
            android:drawablePadding="6dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="DA3"

            >

        </TextView>


        <TextView
            android:id="@+id/letsLoginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h4"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appName"
            android:textAlignment="center"
            android:text="Ecommerce App"
            android:gravity="center"
            android:textSize="35sp"

            >

        </TextView>

        <TextView
            android:id="@+id/dontTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h2"
            app:layout_constraintStart_toStartOf="@id/letsLoginTv"
            app:layout_constraintEnd_toEndOf="@id/letsLoginTv"
            app:layout_constraintTop_toBottomOf="@id/letsLoginTv"
            android:textAlignment="center"
            android:gravity="center"
            android:text="ÄA3"
            android:layout_marginTop="15dp"
            >
        </TextView>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerAccountOptionsBtn"
            android:layout_width="@dimen/mediumButtonWidth"
            android:layout_height="@dimen/mediumButtonHeight"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@+id/dontTv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/dontTv"
            app:layout_constraintStart_toStartOf="@id/dontTv"
            android:text="Register"
            >

        </androidx.appcompat.widget.AppCompatButton>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginAccountOptionsBtn"
            android:layout_width="@dimen/mediumButtonWidth"
            android:layout_height="@dimen/mediumButtonHeight"
            style="@style/whiteButtonStyle"
            app:layout_constraintTop_toBottomOf="@+id/registerAccountOptionsBtn"
            app:layout_constraintEnd_toEndOf="@id/dontTv"
            app:layout_constraintStart_toStartOf="@id/dontTv"
            android:layout_marginTop="10dp"
            android:text="Login"
            >

        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>